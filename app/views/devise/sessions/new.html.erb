<div class="session">
로고자리

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => "session-form" }) do |f| %>
  <%# <div class="field">
    <%= f.label :email %><br />
    <%# <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  <%# </div> %> 

  <div class="field">
    <%= f.text_field :login, class:"form-control id", placeholder:"아이디" %>
  </div>

  <div class="field">
    <%= f.password_field :password ,class:"form-control pw" , placeholder:"비밀번호"%>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label '아이디 저장' %>
    </div>
  <% end -%>

  <div class="actions">
   <button type="submit" class="btn session-btn"> 로그인</button>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>