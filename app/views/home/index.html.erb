    <% else %>
      <p> <%= link_to "로그인", new_user_session_path, class: 'btn btn-default' %> </p>
    <% end %>
    
    <button><%= link_to 'Filtering', menus_search_path, :style=> "color: #454338; text-decoration: none;"%></button>
    </div>
    
    <%= render partial: 'home/search' %>
    
        
    <% if user_signed_in? %> 
